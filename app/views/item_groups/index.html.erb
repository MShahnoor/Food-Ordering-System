<div class="content">
  <section class="page-content container-fluid">

    <%= link_to new_item_group_path,class:"btn btn-info btn-floating col-md-2 btn-prime" do %>
      <span>+ Add Category</span>
    <% end %></br>

    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-body">
            <table id="bs4-table" class="table table-striped table-bordered tbl" style="width:100%">
              <thead>
                <tr>
                  <th>Category #</th>
                  <th>Title</th>
                  <th>Food Items</th>
                  <th>Available</th>
                  <th>Actions</th>
                </tr>
              </thead>

              <tbody>
                <% i = 1 %>

                <% @item_groups.each do |item_group|%>
                  <tr>
                    <td><%= i %></td>
                    <td><%= item_group.title.titleize %></td>
                    <td><%= item_group.food_items.count %></td>
                    <td>
                      <span class="<%= item_group.is_available ? 'badge badge-primary': "badge badge-secondary" %>">
                        <%= item_group.is_available ? "Yes": "No" %>
                      <span>
                    </td>
                    <td class= "flex-icons">
                      <div class="icon" >
                        <%= link_to  item_group_path(item_group),class: "tile-primary" do %>
                          <i class="zmdi zmdi-open-in-new zmdi-hc-fw"></i>
                        <% end %>
                      </div>

                      <div class="icon" >
                        <%= link_to  edit_item_group_path(item_group),class: "tile-primary" do %>
                          <i class="zmdi zmdi-edit zmdi-hc-fw"></i>
                        <% end %>
                      </div>

                      <div class="icon" >
                        <%= link_to  addon_path(item_group),method: :delete,class: "tile-primary",data: {confirm: 'Are you sure?'} do %>
                          <i class="zmdi zmdi-delete zmdi-hc-fw"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>

                  <% i = i.next %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
