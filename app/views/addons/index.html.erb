<div class="content">
  <section class="page-content container-fluid">
    <div class="row">
      <div class="col-12">
        <div class="card">
          <h5 class="card-header">Data Tables</h5>

          <div class="card-body">
            <table id="bs4-table" class="table table-striped table-bordered tbl" style="width:100%">
              <thead>
                <tr>
                  <th>Addon #</th>
                  <th>Title</th>
                  <th>Price</th>
                  <th>Available</th>
                  <th>Actions</th>
                </tr>
              </thead>

              <tbody>
                <% i = 1 %>

                <% @addons.each do |addon|%>
                  <tr>
                    <td><%= i %></td>
                    <td><%= addon.title.titleize %></td>
                    <td><%= addon.price %></td>
                    <td>
                      <span class="<%= addon.is_available ? 'badge badge-primary': "badge badge-secondary" %>">
                        <%= addon.is_available ? "Yes": "No" %>
                      <span>
                    </td>
                    <td class= "flex-icons">
                      <div class="icon" >
                        <%= link_to  root_path,class: "tile-primary" do %>
                          <i class="zmdi zmdi-delete zmdi-hc-fw"></i>
                        <% end %>
                      </div>

                      <div class="icon" >
                        <%= link_to  root_path,class: "tile-primary" do %>
                          <i class="zmdi zmdi-edit zmdi-hc-fw"></i>
                        <% end %>
                      </div>

                      <div class="icon" >
                        <%= link_to  root_path,class: "tile-primary" do %>
                          <i class="zmdi zmdi-open-in-new zmdi-hc-fw"></i>
                        <% end %>
                      </div>
                    </td>
                  </tr>

                  <% i = i.next %>
                <% end %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>
